generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id           String @id @default(uuid())
  collar       String @unique
  name         String
  energy_level Int
  size         String
  age          String
  description  String
  independence String
  anvironment  String

  org    Org    @relation(fields: [org_id], references: [id])
  org_id String

  Images       Image[]
  Requirements Requirement[]

  @@map("pets")
}

model Image {
  id  String @id @default(uuid())
  url String

  pet    Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("images")
}

model Org {
  id            String @id @default(uuid())
  name          String
  organization  String
  email         String @unique
  state         String
  city          String
  cep           Int
  whatsapp      String
  password_hash String

  Pets Pet[]

  @@map("orgs")
}

model Requirement {
  id    String @id @default(uuid())
  title String

  pets   Pet    @relation(fields: [pet_id], references: [id])
  pet_id String

  @@map("requirements")
}
